// Find the sum of even numbers from 2 to 21.

class Number {
    public static void main(String[] args) {

        int sum = 0;

        for (int n = 2; n <= 21; ++n) {
            sum += n;     // sum = sum + n
        }

        System.out.println("Sum = " + sum);
    }
}-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
